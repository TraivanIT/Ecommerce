<div class="container">
<div class="row mt-3">
	<div class="col-md-12">
		<div class="float-left">
		<h5 class="text-info">Product List all Prodcuts on Our Shop [<%= @products.count%>]</h5>
	</div>

	<div class="float-right">
		<%= link_to 'New Product' , new_admin_product_path, class: "btn btn-info btn-md"%>
	</div>

		
	</div>
</div>
	

<hr>


	<table class="table table-borderless">
		<thead>
			<tr>
				<th>#</th>
				<th>Product Name</th>
				<th>Price</th>
				<th>Description</th>
				<th>create</th>
				<th>action</th>

			</tr>
		</thead>
		<tbody>
			<% @products.each do |product|%>
			<tr>
				<td><%= product.id%></td>
				<td><%= product.product_name%></td>
				<td><%= product.product_price%></td>
				<td><%= truncate(product.description, length: 50, separate: '')%></td>
				<td><%= time_ago_in_words product.created_at%></td>
				
				<td>
					<%= link_to 'Edit', edit_admin_product_path(product), class: 'text-info'%> |
					<%= link_to 'Show', admin_product_path(product), class: 'text-info'%> |
					<%= link_to 'Delete', edit_admin_product_path(product), class: 'text-info'%>
					
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>

	<%= paginate @products , theme: 'twitter-bootstrap-4',
                   pagination_class: "pagination-sm",
                   nav_class: "d-inline-b float-right" %>
</div>