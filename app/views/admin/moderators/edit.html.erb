<h1>Moderator Edit</h1>

<div class="row">
	<div class="col-md-12">
	<%= form_for [:admin, @moderator] do |f|%>
		<%if @moderator.errors.any?%>
			<div id="errors_validation" class="text-danger">
				<h4><%= pluralize(@moderator.errors.count ,"error")%> prohibited from being saved:</h4>
				<ul>
					<%@moderator.errors.full_messages.each do |smg|%>
						<li><%= smg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<div class="form-inline">
			

			<label class="sr-only" for="inlineFormInputName2">Name</label>
  		<%= f.text_field :fullname , class: 'form-control mb-2 mr-sm-2', placeholder: 'Fullname'%>

  		<label class="sr-only" for="inlineFormInputGroupUsername2">Username</label>
		  <div class="input-group mb-2 mr-sm-2">
		    <div class="input-group-prepend">
		      <div class="input-group-text">@</div>
		    </div>
		    <%= f.text_field :username , class: 'form-control', placeholder: 'Fullname'%>
		  </div>

		  <label class="sr-only" for="inlineFormInputName2">Name</label>
  		<%= f.password_field :password , class: 'form-control mb-2 mr-sm-2', placeholder: 'Password'%>
  		
  		<%= f.button :submit ,class: "btn btn btn-primary mb-2 mr-2 "%>

  		<%= link_to 'Cancel', admin_moderators_url, class: "btn btn btn-danger mb-2"%>
			
		</div>
	<% end %>
	</div>
</div>


