
<div class="container">
<div class="row mt-3">
	<div class="col-md-12">
		<div class="float-left">
		<h5 class="text-info">Product List all Prodcuts on Our Shop [<%= @customers.count%>]</h5>
	</div>
	</div>
</div>
<hr>
	<table class="table table-borderless">
		<thead>
			<tr>
				<th>#</th>
				<th>Customer Name</th>
				<th>email</th>
				<th>Phone Number</th>
				<th>create</th>
				
			</tr>
		</thead>
		<tbody>
			<% @customers.each do |customer|%>
			<tr>
				<td><%= customer.id%></td>
				<td><%= customer.name%></td>
				<td><%= customer.email%></td>
				<td><%= customer.phone%></td>
				<td><%= time_ago_in_words customer.created_at%></td>
				
			</tr>
			<% end %>
		</tbody>
	</table>